#!/bin/sh

WCFLAGS="${inc_search_path}"
WLFLAGS="${lib_search_path}"
WLIBS="-lWINGs -lWUtil -lwraster ${GFXLIBS} ${XFTLIBS} ${XLIBS} -lm ${INTLIBS} ${PANGOLIBS}"

usage="Usage: get-wings-flags [--cflags] [--ldflags] [--libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case $1 in
    --cflags)
	echo $WCFLAGS
        ;;
    --ldflags|--lflags)
	echo $WLFLAGS
        ;;
    --libs)
	echo $WLIBS
        ;;
    *)
	echo "${usage}" 1>&2
	exit 1
	;;
  esac
  shift
done
